#!/usr/bin/env bash

source "${BASH_SOURCE%/*}/shared.sh"

if is_macos; then
  if test ! $(which brew); then
    echo "Installing homebrew"

    ruby -e "$(curl -fsSL \
      https://raw.githubusercontent.com/Homebrew/install/master/install)"

    brew update
  fi

  packages=(
    emojify
    reattach-to-user-namespace
  )

  dotheader "Setting up Homebrew..."

  brew_install_all "${packages[@]}"
elif is_linux; then
  dotheader "Setting up Aptitude..."

  apt_install aptitude
fi

brew_install ack
apt_install ack-grep

# Apt build

buildtools=(
  make
  cmake
  build-essential
  libssl-dev
  zlib1g-dev
  libbz2-dev
  libreadline-dev
  libsqlite3-dev
  wget
  curl
  llvm
  libncurses5-dev
  xz-utils
  tk-dev
)

for package in "${buildtools[@]}"; do
  apt_install "$package"
done

brew_install the_silver_searcher
apt_install silversearcher-ag

install_package sl
install_package wget
